# Production Environment Variables Template
# DO NOT commit actual secrets to Git!
# Set these values in your Render.com dashboard Environment tab

PORT_NO=5000
NODE_ENV=production

# Frontend URL - Production
FRONTEND_URL=https://elevare-seven.vercel.app

# Database (set in Render dashboard - DO NOT commit actual URL)
DATABASE_URL=your_mongodb_connection_string_here

# Redis (set in Render dashboard - DO NOT commit actual credentials)
REDIS_PASSWORD=your_redis_password_here
REDIS_HOST=your_redis_host_here
REDIS_PORT=your_redis_port_here

# JWT (set in Render dashboard - DO NOT commit actual secret)
JWT_SECRET=your_jwt_secret_here

# Google OAuth (set in Render dashboard - DO NOT commit actual credentials)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# AI Service - Google Gemini (set in Render dashboard - DO NOT commit actual keys)
GEMINI_API_KEYS=your_gemini_api_keys_here
GEMINI_MODEL=gemini-1.5-pro

# Cloudinary (set in Render dashboard - DO NOT commit actual credentials)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name_here
CLOUDINARY_API_KEY=your_cloudinary_api_key_here
CLOUDINARY_API_SECRET=your_cloudinary_api_secret_here

# Razorpay (set in Render dashboard - DO NOT commit actual credentials)
RAZORPAY_KEY=your_razorpay_key_here
RAZORPAY_SECRET=your_razorpay_secret_here

# Hugging Face (set in Render dashboard - DO NOT commit actual key)
HUG_API_KEY=your_hugging_face_api_key_here

# Other settings
SKIP_ATS_AUTH=true
AI_REQUEST_TIMEOUT=30000
AI_RETRY_ATTEMPTS=3
AI_RETRY_DELAY=1000
AI_RATE_LIMIT_PER_DAY=1000
AI_RATE_LIMIT_PER_HOUR=100
AI_RATE_LIMIT_PER_MINUTE=10
AI_CACHE_ENABLED=true
AI_CACHE_TTL_RESUME=300
AI_CACHE_TTL_PORTFOLIO=3600
AI_CACHE_TTL_INTERVIEW=86400
AI_LOGGING_ENABLED=true
AI_LOG_LEVEL=info
AI_METRICS_ENABLED=true
