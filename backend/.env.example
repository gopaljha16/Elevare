# Environment Variables for Elevare Backend

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/elevare
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here

# AI Configuration (Google Gemini)
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-1.5-flash

# Server Configuration
PORT=5000
NODE_ENV=development

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Rate Limiting
AI_RATE_LIMIT_PER_DAY=100
AI_RATE_LIMIT_PER_HOUR=20
AI_RATE_LIMIT_PER_MINUTE=5

# AI Request Configuration
AI_REQUEST_TIMEOUT=30000
AI_RETRY_ATTEMPTS=3
AI_RETRY_DELAY=1000

# Security Configuration
ENABLE_API_KEY_ROTATION=false
KEY_ROTATION_INTERVAL=86400000
ENABLE_AI_REQUEST_LOGGING=true
AI_LOG_LEVEL=info

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=application/pdf,application/vnd.openxmlformats-officedocument.wordprocessingml.document,application/msword
